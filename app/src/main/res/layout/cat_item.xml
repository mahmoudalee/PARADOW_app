<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:layout_height="220dp"
    android:background="@color/colorPrimaryDark"
    app:corner_radius="16dp">

    <ImageView
        android:id="@+id/fav_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border"/>

    <ImageView
        android:id="@+id/image_card_view"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Android  (Basics)"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/description_card_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/rate_icon"/>

        </LinearLayout>
    </LinearLayout>
</com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>